@using Dfe.PrepareTransfers.Web.Dfe.PrepareTransfers.Helpers.TagHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Dfe.PrepareTransfers.Web.Pages.Projects.TransferDates.Index

<dl class="govuk-summary-list">
    <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
            Advisory board date
        </dt>
        <dd class="govuk-summary-list__value">
            <datesummary value="@Model.AdvisoryBoardDate" has-date="@Model.HasAdvisoryBoardDate"></datesummary>
        </dd>
        <dd class="govuk-summary-list__actions">
            <a class="govuk-link" asp-page="/Projects/TransferDates/AdvisoryBoard" data-test="ab-date"
               asp-route-urn="@Model.Urn" asp-route-returnToPreview="@(Model.ReturnToPreview  ? "true" : null)">
                Change<span class="govuk-visually-hidden"> Advisory board date</span>
            </a>
        </dd>
    </div>
    <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
            Previous advisory board
        </dt>
        <dd class="govuk-summary-list__value">
            <datesummary value="@Model.PreviousAdvisoryBoardDate"></datesummary>
        </dd>
        <dd class="govuk-summary-list__actions">
            <a class="govuk-link" asp-page="/Projects/TransferDates/PreviousAdvisoryBoard" data-test="previous-ab-date"
               asp-route-urn="@Model.Urn" asp-route-returnToPreview="@(Model.ReturnToPreview  ? "true" : null)">
                Change<span class="govuk-visually-hidden"> Previous advisory board</span>
            </a>
        </dd>
    </div>
    <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
            Proposed transfer date
        </dt>
        <dd class="govuk-summary-list__value">
            <datesummary value="@Model.TargetDate" has-date="@Model.HasTargetDate"></datesummary>
        </dd>
        <dd class="govuk-summary-list__actions">
            <a class="govuk-link" asp-page="/Projects/TransferDates/Target" data-test="target-date"
               asp-route-urn="@Model.Urn" asp-route-returnToPreview="@(Model.ReturnToPreview  ? "true" : null)">
                Change<span class="govuk-visually-hidden"> Proposed transfer date</span>
            </a>
        </dd>
    </div>
</dl>
@page "/task-list/{urn}/decision/any-conditions"
@using Dfe.PrepareTransfers.Extensions
@model Dfe.PrepareTransfers.Pages.TaskList.Decision.AnyConditionsModel
@{
   ViewData["Title"] = "Any conditions set";
   Layout = "_Layout";
}

@section BeforeMain
{
   <partial name="_BackLink" model="@Model.BackLinkModel"/> 
   <partial name="_ErrorSummary"/>
}

<div class="govuk-grid-row">
   <div class="govuk-grid-column-two-thirds">

      <span id="selection-span" class="govuk-caption-l">@Model.TrustName</span>
      <h1 class="govuk-heading-l">Were any conditions set?</h1>

      <form method="post">
         <div class="govuk-form-group">
            <fieldset class="govuk-fieldset">
               <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
               </legend>

               <div class="govuk-radios govuk-radios--conditional @ModelState.GetErrorStyleClass()" data-module="govuk-radios" id="ApprovedConditionsSet">
                  <div class="govuk-radios__item">
                     <input class="govuk-radios__input" asp-for="ApprovedConditionsSet"
                            title="Yes" type="radio" value="true" id="yes-radio" aria-controls="conditional-approved-conditions" aria-expanded="true">
                     <label class="govuk-label govuk-radios__label" for="ApprovedConditionsSet">
                        Yes
                     </label>
                  </div>

                  <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-approved-conditions">
                     <div class="govuk-form-group">
                        <label class="govuk-label" for="approved-conditions-yes-details">
                           What conditions were set?
                        </label>

                        <textarea class="govuk-textarea govuk-!-width-full" asp-for="ApprovedConditionsDetails" rows="5"></textarea>
                     </div>
                  </div>

                  <div class="govuk-radios__item">
                     <input class="govuk-radios__input" type="radio" asp-for="ApprovedConditionsSet"
                            title="No" value="false" id="no-radio"/>
                     <label class="govuk-label govuk-radios__label" for="no-radio">
                        No
                     </label>
                  </div>
               </div>
            </fieldset>
         </div>

         <button class="govuk-button" data-module="govuk-button" id="submit-btn">
            Continue
         </button>

      </form>

   </div>
</div>
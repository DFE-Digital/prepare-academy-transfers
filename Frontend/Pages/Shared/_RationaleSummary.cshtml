@model Frontend.Pages.Projects.Rationale.Index

<dl class="govuk-summary-list">
    <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
            What is the rationale for the project?
        </dt>
        <dd class="govuk-summary-list__value">
            @if (string.IsNullOrEmpty(Model.ProjectRationale))
            {
                <span class="dfe-empty-tag">Empty</span>
            }
            else
            {
                <span class="dfe-text-area-display">@Model.ProjectRationale</span>
            }
        </dd>
        <dd class="govuk-summary-list__actions">
            <a class="govuk-link" asp-page="/Projects/Rationale/Project" data-test="project-rationale"
               asp-route-urn="@Model.Urn" asp-route-returnToPreview="@(Model.ReturnToPreview  ? "true" : null)">
                Change<span class="govuk-visually-hidden"> rationale for project</span>
            </a>
        </dd>
    </div>
    <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
            Why was the incoming trust or sponsor chosen?
        </dt>
        <dd class="govuk-summary-list__value">
            @if (string.IsNullOrEmpty(Model.TrustRationale))
            {
                <span class="dfe-empty-tag">Empty</span>
            }
            else
            {
                <span class="dfe-text-area-display">@Model.TrustRationale</span>
            }
        </dd>
        <dd class="govuk-summary-list__actions">
            <a class="govuk-link" asp-page="/Projects/Rationale/TrustOrSponsor" data-test="trust-rationale"
               asp-route-urn="@Model.Urn" asp-route-returnToPreview="@(Model.ReturnToPreview  ? "true" : null)">
                Change<span class="govuk-visually-hidden"> rationale for the trust or sponsor</span>
            </a>
        </dd>
    </div>
</dl>
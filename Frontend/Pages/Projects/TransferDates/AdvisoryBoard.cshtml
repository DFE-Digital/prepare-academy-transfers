@page "/project/{urn}/transfer-dates/advisory-board-date"
@using Microsoft.AspNetCore.Mvc.ModelBinding
@model Frontend.Pages.Projects.TransferDates.AdvisoryBoard


@{
    ViewBag.Title = (!ViewData.ModelState.IsValid ? "Error: " : "") + "Advisory Board date";
    Layout = "_Layout";
    var formClasses = !ViewData.ModelState.IsValid ? "govuk-form-group--error" : "";
    var inputError = ViewData.ModelState.GetFieldValidationState(nameof(Model.AdvisoryBoardViewModel.AdvisoryBoardDate.Date.Day)) == ModelValidationState.Invalid ? "govuk-input--error" : "";
}

@section BeforeMain
{
    <backtopreview urn="@Model.Urn" return-to-preview="@Model.ReturnToPreview">
        <a class="govuk-back-link" asp-page="/Projects/TransferDates/Index" asp-route-urn="@Model.Urn">Back</a>
    </backtopreview>
}

<div asp-gds-validation-summary></div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form method="post" novalidate="">
            <input type="hidden" asp-for="@Model.Urn"/>
            <input type="hidden" asp-for="@Model.ReturnToPreview"/>
            <input type="hidden" asp-for="@Model.IncomingTrustName"/>
            <div class="govuk-form-group @formClasses">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l" aria-describedby="set-ab-date-hint">
                        <h1 class="govuk-fieldset__heading">
                            <span class="govuk-caption-l">
                                @Model.IncomingTrustName
                            </span>
                            Advisory Board date
                        </h1>
                    </legend>
                    <div id="set-ab-date-hint" class="govuk-hint">
                        For example, 12 11 2021. You can change this date later.
                    </div>

                   <p asp-gds-validation-for="AdvisoryBoardViewModel.AdvisoryBoardDate.Date.Day"></p>
                   <p asp-gds-validation-for="AdvisoryBoardViewModel.AdvisoryBoardDate.Date.Month"></p>
                   <p asp-gds-validation-for="AdvisoryBoardViewModel.AdvisoryBoardDate.Date.Year"></p>


                    <div class="govuk-date-input" id="ab-date">
                        <div class="govuk-date-input__item">
                            <div class="govuk-form-group">
                                <label asp-for="AdvisoryBoardViewModel.AdvisoryBoardDate.Date.Day" class="govuk-label govuk-date-input__label">
                                    Day
                                </label>
                                <input asp-for="AdvisoryBoardViewModel.AdvisoryBoardDate.Date.Day" class="govuk-input govuk-date-input__input govuk-input--width-2 @inputError" type="text" pattern="[0-9]*" inputmode="numeric" data-test="day">
                            </div>
                        </div>
                        <div class="govuk-date-input__item">
                            <div class="govuk-form-group">
                                <label asp-for="AdvisoryBoardViewModel.AdvisoryBoardDate.Date.Month" class="govuk-label govuk-date-input__label">
                                    Month
                                </label>
                                <input asp-for="AdvisoryBoardViewModel.AdvisoryBoardDate.Date.Month" class="govuk-input govuk-date-input__input govuk-input--width-2 @inputError" type="text" pattern="[0-9]*" inputmode="numeric" data-test="month">
                            </div>
                        </div>
                        <div class="govuk-date-input__item">
                            <div class="govuk-form-group">
                                <label asp-for="AdvisoryBoardViewModel.AdvisoryBoardDate.Date.Year" class="govuk-label govuk-date-input__label">
                                    Year
                                </label>
                                <input asp-for="AdvisoryBoardViewModel.AdvisoryBoardDate.Date.Year" class="govuk-input govuk-date-input__input govuk-input--width-4 @inputError" type="text" pattern="[0-9]*" inputmode="numeric" data-test="year">
                            </div>
                        </div>
                    </div>

                    <div class="govuk-body govuk-!-margin-top-4">or</div>

                    <div class="govuk-checkboxes govuk-!-margin-top-4" data-module="govuk-checkboxes">
                        <div class="govuk-checkboxes__item">
                            <input asp-for="AdvisoryBoardViewModel.AdvisoryBoardDate.UnknownDate" class="govuk-checkboxes__input" type="checkbox">
                            <label asp-for="AdvisoryBoardViewModel.AdvisoryBoardDate.UnknownDate" class="govuk-label govuk-checkboxes__label">
                                I do not know this
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>
            <button class="govuk-button" data-module="govuk-button" type="submit">
                Save and continue
            </button>
        </form>
    </div>
</div>